        isSafeText(request.resource.data.title, 100) &&
        isSafeText(request.resource.data.content, 2000) &&
        request.resource.data.priority in ['normal', 'important', 'urgent'] &&
        request.resource.data.startDate is timestamp &&
        (!('endDate' in request.resource.data) || request.resource.data.endDate is timestamp || request.resource.data.endDate == null) &&
        request.resource.data.createdBy == request.auth.uid &&
        request.resource.data.isActive is bool &&
        request.resource.data.viewCount is number;

      // 수정: 관리자와 매니저만 가능
      allow update: if isPrivileged();

      // 삭제: 관리자만 가능
      allow delete: if request.auth.token.role == 'admin';
    }

    // --- Job Posting Announcements Collection (공고별 공지) ---
    match /jobPostingAnnouncements/{announcementId} {
