rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ================= Helper Functions =================
    function isSignedIn() {
      return request.auth != null;
    }
    
    // ================= Security Functions =================
    // 입력 데이터 검증
    function isValidString(field, maxLength) {
      return field is string && field.size() <= maxLength;
    }
    
    // XSS 패턴 검사
    function hasNoXSS(text) {
      return !text.matches('.*<script.*>.*</script>.*') &&
             !text.matches('.*javascript:.*') &&
             !text.matches('.*on\\w+\\s*=.*');
    }
    
    // SQL Injection 패턴 검사
    function hasNoSQLInjection(text) {
      return !text.matches('.*union.*select.*') &&
             !text.matches('.*select.*from.*') &&
             !text.matches('.*insert.*into.*') &&
             !text.matches('.*delete.*from.*') &&
             !text.matches('.*drop.*table.*');
    }
    
    // 안전한 텍스트 검증
    function isSafeText(text, maxLength) {
      return isValidString(text, maxLength) && 
             hasNoXSS(text) && 
             hasNoSQLInjection(text);
    }

    // ================= Role Helper Functions (Firestore 문서 기반) =================
    // Custom Claims 대신 Firestore users 문서에서 role을 읽어옴
    // 장점: 즉시 반영 (토큰 갱신 불필요)
    // 단점: 각 요청마다 추가 읽기 1회 발생

    // 사용자의 역할 가져오기
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    // 관리자 권한 확인 (admin, employer, manager)
    // ⚠️ manager는 하위 호환성을 위해 유지 (employer와 동일 권한)
    function isPrivileged() {
      return getUserRole() in ['admin', 'employer', 'manager'];
    }

    // 유효한 역할 확인 (admin, employer, manager, staff)
    // 역할 계층: admin(100) > employer/manager(50) > staff(10)
    function hasValidRole() {
      return getUserRole() in ['admin', 'employer', 'manager', 'staff'];
    }

    // 관리자 여부 확인
    function isAdmin() {
      return getUserRole() == 'admin';
    }
    

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // ================= Employer Registration Validation =================
    // 구인자 등록 시 역할 변경 검증
    // - staff → employer 변경만 허용
    // - 본인인증 완료 필수
    // - 필수 필드 검증
    function isValidEmployerRegistration() {
      let currentData = resource.data;
      let newData = request.resource.data;
      let changedFields = newData.diff(currentData).affectedKeys();

      // 1. 변경 가능한 필드만 변경되었는지 확인
      let allowedFields = ['role', 'employerAgreements', 'employerRegisteredAt', 'updatedAt'];

      return changedFields.hasOnly(allowedFields) &&
        // 2. 현재 역할이 staff인지 확인
        currentData.role == 'staff' &&
        // 3. 새 역할이 employer인지 확인
        newData.role == 'employer' &&
        // 4. 전화번호 인증 완료 여부 확인
        currentData.phoneVerified == true &&
        // 5. employerAgreements 필수 필드 확인
        'employerAgreements' in newData &&
        newData.employerAgreements.keys().hasAll(['termsAgreedAt', 'liabilityWaiverAgreedAt']) &&
        // 6. employerRegisteredAt 존재 확인
        'employerRegisteredAt' in newData;
    }

    // ================= Job Posting Type Validation Functions =================
    // ⚠️ 클라이언트 Timestamp는 Security Rules의 `is timestamp` 검증을 통과하지 못함
    // 따라서 timestamp 필드는 존재 여부만 확인 (타입 검증 제거)

    // FixedConfig 검증 함수
    function validateFixedConfig(config) {
      return config.durationDays in [7, 30, 90] &&
             'expiresAt' in config &&
             'createdAt' in config;
    }

    // TournamentConfig 검증 함수
    function validateTournamentConfig(config) {
      return config.approvalStatus in ['pending', 'approved', 'rejected'] &&
             'submittedAt' in config &&
             (!('approvedBy' in config) || config.approvedBy is string) &&
             (!('rejectedBy' in config) || config.rejectedBy is string) &&
             (!('rejectionReason' in config) || (config.rejectionReason is string && config.rejectionReason.size() >= 10));
    }

    // UrgentConfig 검증 함수
    function validateUrgentConfig(config) {
      return config.priority == 'high' &&
             'createdAt' in config;
    }

    // Tournament 승인 필드만 변경되었는지 확인 (admin 전용)
    function onlyApprovalFieldsChanged() {
      let allowedFields = ['tournamentConfig'];
      let changedFields = request.resource.data.diff(resource.data).affectedKeys();
      return changedFields.hasOnly(allowedFields) &&
             request.resource.data.tournamentConfig.approvalStatus in ['approved', 'rejected'] &&
             ((request.resource.data.tournamentConfig.approvalStatus == 'approved' &&
               request.resource.data.tournamentConfig.keys().hasAll(['approvedBy', 'approvedAt'])) ||
              (request.resource.data.tournamentConfig.approvalStatus == 'rejected' &&
               request.resource.data.tournamentConfig.keys().hasAll(['rejectedBy', 'rejectedAt', 'rejectionReason'])));
    }

    // ================= Collection Rules =================

    // --- Users Collection ---
    match /users/{userId} {
      allow read: if isSignedIn() && (isOwner(userId) || isPrivileged());

      // 관리자는 모든 쓰기 가능
      allow write: if isSignedIn() && isPrivileged();

      // 본인 문서 생성
      allow create: if isSignedIn() && isOwner(userId);

      // 본인 문서 수정: 일반 업데이트 또는 구인자 등록
      allow update: if isSignedIn() && isOwner(userId) && (
        // 일반 프로필 업데이트 (role 변경 불가)
        (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role'])) ||
        // 구인자 등록 (staff → employer)
        isValidEmployerRegistration()
      );

      // 본인 문서 삭제 불가 (계정 삭제는 Cloud Functions 통해서만)
      allow delete: if false;

      // Subcollection: profile (사용자 프로필 - 공개 정보)
      match /profile/{profileId} {
        // 모든 인증된 사용자가 읽기 가능 (닉네임 등 공개 정보)
        allow read: if isSignedIn();
        // 본인만 쓰기 가능
        allow write: if isSignedIn() && isOwner(userId);
      }

      // Subcollection: myApplications (사용자의 지원 내역)
      match /myApplications/{appId} {
        allow read: if isSignedIn() && (isOwner(userId) || isPrivileged());
        allow write: if isSignedIn() && (isOwner(userId) || isPrivileged());
      }

      // Subcollection: myWorkSessions (사용자의 근무 세션)
      match /myWorkSessions/{sessionId} {
        allow read: if isSignedIn() && (isOwner(userId) || isPrivileged());
        allow write: if isSignedIn() && (isOwner(userId) || isPrivileged());
      }

      // Subcollection: settings (사용자 설정)
      match /settings/{settingId} {
        // 본인의 설정만 읽기/쓰기 가능
        allow read, write: if isSignedIn() && isOwner(userId);
      }

      // Subcollection: counters (카운터 - 미읽음 알림 수 등)
      match /counters/{counterId} {
        // 본인의 카운터만 읽기 가능
        allow read: if isSignedIn() && isOwner(userId);
        // 쓰기는 Cloud Functions에서만 가능 (클라이언트 직접 수정 차단)
        allow write: if false;
      }

      // --- Account Management Subcollections ---

      // Subcollection: consents (동의 관리)
      match /consents/{consentId} {
        // 본인의 동의 정보만 읽기 가능, 관리자는 감사 목적으로 읽기 가능
        allow read: if isSignedIn() && (isOwner(userId) || isPrivileged());

        // 본인만 동의 정보 생성/수정 가능
        allow create, update: if isSignedIn() && isOwner(userId) &&
          request.resource.data.keys().hasAll(['version', 'userId', 'termsOfService', 'privacyPolicy']) &&
          request.resource.data.userId == userId &&
          request.resource.data.termsOfService.agreed == true &&
          request.resource.data.privacyPolicy.agreed == true;

        // 동의 정보는 삭제 불가 (법적 요구사항)
        allow delete: if false;
      }

      // Subcollection: consentHistory (동의 변경 이력)
      match /consentHistory/{historyId} {
        // 본인의 이력만 읽기 가능, 관리자는 감사 목적으로 읽기 가능
        allow read: if isSignedIn() && (isOwner(userId) || isPrivileged());

        // 이력은 시스템에서만 생성 가능 (클라이언트 직접 생성 불가)
        allow create: if isSignedIn() && isOwner(userId) &&
          request.resource.data.keys().hasAll(['timestamp', 'changedFields', 'previousValues', 'newValues']);

        // 이력은 수정/삭제 불가 (감사 추적 보존)
        allow update, delete: if false;
      }

      // Subcollection: deletionRequests (계정 삭제 요청)
      match /deletionRequests/{requestId} {
        // 본인의 삭제 요청만 읽기 가능, 관리자는 처리 목적으로 읽기 가능
        allow read: if isSignedIn() && (isOwner(userId) || isPrivileged());

        // 본인만 삭제 요청 생성 가능
        allow create: if isSignedIn() && isOwner(userId) &&
          request.resource.data.keys().hasAll(['requestId', 'userId', 'userEmail', 'userName', 'requestedAt', 'scheduledDeletionAt', 'status']) &&
          request.resource.data.userId == userId &&
          request.resource.data.status == 'pending';

        // 본인은 취소만 가능, 관리자는 모든 상태 변경 가능
        allow update: if isSignedIn() && (
          (isOwner(userId) && request.resource.data.status == 'cancelled') ||
          isPrivileged()
        );

        // 삭제는 관리자만 가능
        allow delete: if isPrivileged();
      }

      // Subcollection: loginHistory (로그인 이력)
      match /loginHistory/{historyId} {
        // 본인의 로그인 이력만 읽기 가능, 관리자는 보안 감사 목적으로 읽기 가능
        allow read: if isSignedIn() && (isOwner(userId) || isPrivileged());

        // 로그인 이력은 서버에서만 생성 가능 (Firebase Functions)
        // 클라이언트에서 직접 생성하는 것은 보안상 차단
        allow create: if false;

        // 로그인 이력은 수정/삭제 불가 (보안 감사 추적 보존)
        allow update, delete: if false;
      }

      // Subcollection: securitySettings (보안 설정)
      match /securitySettings/{settingId} {
        // 본인의 보안 설정만 읽기/쓰기 가능
        allow read: if isSignedIn() && isOwner(userId);

        // 본인만 보안 설정 생성/수정 가능
        allow create, update: if isSignedIn() && isOwner(userId);

        // 보안 설정 삭제는 계정 삭제 시에만 가능 (관리자)
        allow delete: if isPrivileged();
      }

      // Subcollection: penalties (패널티 관리)
      match /penalties/{penaltyId} {
        // 읽기: 본인 또는 관리자 가능
        allow read: if isSignedIn() && (request.auth.uid == userId || isPrivileged());

        // 생성: 관리자만 가능
        allow create: if isSignedIn() && isPrivileged() &&
          request.resource.data.keys().hasAll(['userId', 'type', 'reason', 'duration', 'startDate', 'status', 'createdBy']) &&
          request.resource.data.userId == userId &&
          request.resource.data.type in ['warning', 'loginBlock'] &&
          isSafeText(request.resource.data.reason, 100) &&
          request.resource.data.duration in ['1d', '3d', '7d', '30d', '90d', 'permanent'] &&
          request.resource.data.status == 'active';

        // 수정: 관리자만 가능 (취소 처리)
        allow update: if isSignedIn() && isPrivileged();

        // 삭제: 관리자만 가능
        allow delete: if isAdmin();
      }
    }

    // --- Events Collection ---
    match /events/{eventId} {
      allow read: if isSignedIn();
      allow write: if isPrivileged();
    }

    // --- Assignments Collection ---
    match /assignments/{assignmentId} {
      allow read: if isSignedIn() && (isPrivileged() || request.auth.uid == resource.data.dealerId);
      allow create, update, delete: if isPrivileged();
    }
    
    // --- Payrolls Collection ---
    match /payrolls/{payrollId} {
      allow read: if isSignedIn() && (isPrivileged() || request.auth.uid == resource.data.dealerId);
      allow create, update, delete: if isPrivileged();
    }

    // --- Ratings Collection ---
    match /ratings/{ratingId} {
      allow read: if isSignedIn() && (isPrivileged() || request.auth.uid == resource.data.dealerId);
      allow create: if isPrivileged();
      allow update, delete: if false; // Ratings are immutable
    }

    // --- Announcements Collection ---
    match /announcements/{announcementId} {
      allow read: if isSignedIn();
      allow write: if isPrivileged();
    }

    // --- Notifications Collection ---
    // ✅ 보안 강화: 클라이언트 알림 생성 완전 차단 (Cloud Functions만 가능)
    match /notifications/{notificationId} {
      // 본인의 알림만 읽기 가능 (recipientId 또는 userId 필드 기반 - 하위 호환성)
      allow read: if isSignedIn() && (
        request.auth.uid == resource.data.recipientId ||
        request.auth.uid == resource.data.userId
      );

      // 본인의 알림만 읽음 처리 및 삭제 가능
      // _batchUpdate: markAllAsRead 배치 업데이트 시 onNotificationRead 트리거 스킵 플래그
      allow update: if isSignedIn() && (
        request.auth.uid == resource.data.recipientId ||
        request.auth.uid == resource.data.userId
      ) && request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['isRead', 'readAt', '_batchUpdate']) &&
        (!('_batchUpdate' in request.resource.data) || request.resource.data._batchUpdate is bool);

      allow delete: if isSignedIn() && (
        request.auth.uid == resource.data.recipientId ||
        request.auth.uid == resource.data.userId
      );

      // ❌ 클라이언트 생성 완전 차단 (Cloud Functions만 가능)
      allow create: if false;
    }

    // --- Staff Availability ---
    match /staffAvailability/{staffId} {
        allow read: if isSignedIn() && (isOwner(staffId) || isPrivileged());
        allow write: if isSignedIn() && isOwner(staffId);
    }

    // --- Job Postings Collection ---
    match /jobPostings/{postId} {
      // Everyone can read job postings
      allow read: if isSignedIn();

      // Admin can create/update any job posting
      // Manager and Staff can create job postings and update their own
      // v2.0: 앱 타입 정의에 맞춘 status 허용 값 + location 객체 지원
      allow create: if hasValidRole() &&
        request.resource.data.keys().hasAll(['title', 'location', 'status', 'createdBy']) &&
        request.resource.data.createdBy == request.auth.uid &&
        isSafeText(request.resource.data.title, 200) &&
        (!('description' in request.resource.data) || request.resource.data.description is string) &&
        request.resource.data.location is map &&
        request.resource.data.location.keys().hasAny(['name', 'region', 'district']) &&
        request.resource.data.status in ['draft', 'active', 'closed', 'cancelled'] &&
        (!('postingType' in request.resource.data) || request.resource.data.postingType in ['regular', 'fixed', 'tournament', 'urgent']) &&
        (!('detailedAddress' in request.resource.data) || isSafeText(request.resource.data.detailedAddress, 500)) &&
        (!('contactPhone' in request.resource.data) || isSafeText(request.resource.data.contactPhone, 25)) &&
        (!('preQuestions' in request.resource.data) || request.resource.data.preQuestions is list) &&
        (!('usesPreQuestions' in request.resource.data) || request.resource.data.usesPreQuestions is bool) &&
        (!('updatedBy' in request.resource.data) || request.resource.data.updatedBy is string) &&
        // 추가 필드 검증
        (!('applicants' in request.resource.data) || request.resource.data.applicants is list) &&
        // 타입별 config 검증 (timestamp 타입 체크 제거됨)
        (!('fixedConfig' in request.resource.data) || (request.resource.data.postingType == 'fixed' && validateFixedConfig(request.resource.data.fixedConfig))) &&
        (!('tournamentConfig' in request.resource.data) || (request.resource.data.postingType == 'tournament' && validateTournamentConfig(request.resource.data.tournamentConfig))) &&
        (!('urgentConfig' in request.resource.data) || (request.resource.data.postingType == 'urgent' && validateUrgentConfig(request.resource.data.urgentConfig)));

      // Admin can update any job posting, Manager/Staff can update their own
      // Tournament 승인은 admin만 가능
      allow update: if (isAdmin() &&
        (!('postingType' in request.resource.data) || request.resource.data.postingType == resource.data.postingType) &&
        (!('fixedConfig' in request.resource.data) || validateFixedConfig(request.resource.data.fixedConfig)) &&
        (!('tournamentConfig' in request.resource.data) || validateTournamentConfig(request.resource.data.tournamentConfig)) &&
        (!('urgentConfig' in request.resource.data) || validateUrgentConfig(request.resource.data.urgentConfig))) ||
        (hasValidRole() && request.auth.uid == resource.data.createdBy &&
         (!('postingType' in request.resource.data) || request.resource.data.postingType == resource.data.postingType) &&
         (!('fixedConfig' in request.resource.data) || validateFixedConfig(request.resource.data.fixedConfig)) &&
         // Tournament 승인 필드는 admin만 수정 가능
         (!('tournamentConfig' in request.resource.data) ||
          (resource.data.postingType == 'tournament' &&
           request.resource.data.tournamentConfig.approvalStatus == resource.data.tournamentConfig.approvalStatus)) &&
         (!('urgentConfig' in request.resource.data) || validateUrgentConfig(request.resource.data.urgentConfig))) &&
        (!('detailedAddress' in request.resource.data) || request.resource.data.detailedAddress is string) &&
        (!('preQuestions' in request.resource.data) || request.resource.data.preQuestions is list) &&
        (!('usesPreQuestions' in request.resource.data) || request.resource.data.usesPreQuestions is bool) &&
        (!('updatedBy' in request.resource.data) || request.resource.data.updatedBy is string);
        // serverTimestamp()는 센티넬 값이므로 is timestamp 검증 불가 - updatedAt 검증 제거

      // Phase 4: 조회수 증가 권한 (로그인한 사용자는 누구나 조회수 증가 가능)
      // fixedData.viewCount 필드만 변경되는 경우 허용
      allow update: if isSignedIn() &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['fixedData']) &&
        request.resource.data.fixedData.diff(resource.data.fixedData).affectedKeys().hasOnly(['viewCount']);

      // Admin can delete any job posting, Manager/Staff can delete their own
      allow delete: if (isAdmin()) ||
        (hasValidRole() && request.auth.uid == resource.data.createdBy);
        
      // --- Subcollections for Job Postings ---
      // Staff subcollection
      match /staff/{userId} {
        allow read: if isSignedIn();
        allow write: if isPrivileged() ||
          (hasValidRole() && get(/databases/$(database)/documents/jobPostings/$(postId)).data.createdBy == request.auth.uid);
      }

      // WorkLogs subcollection
      match /workLogs/{workLogId} {
        allow read: if isSignedIn();
        allow write: if isPrivileged() ||
          (hasValidRole() && get(/databases/$(database)/documents/jobPostings/$(postId)).data.createdBy == request.auth.uid);
      }

      // Hybrid Architecture: Applications subcollection (공고별 지원서)
      match /applications/{appId} {
        allow read: if isSignedIn() && (
          isPrivileged() ||
          get(/databases/$(database)/documents/jobPostings/$(postId)).data.createdBy == request.auth.uid
        );
        allow write: if isSignedIn() && (
          isPrivileged() ||
          get(/databases/$(database)/documents/jobPostings/$(postId)).data.createdBy == request.auth.uid
        );
      }

      // Hybrid Architecture: WorkSessions subcollection (공고별 근무 세션)
      match /workSessions/{sessionId} {
        allow read: if isSignedIn() && (
          isPrivileged() ||
          get(/databases/$(database)/documents/jobPostings/$(postId)).data.createdBy == request.auth.uid
        );
        allow write: if isSignedIn() && (
          isPrivileged() ||
          get(/databases/$(database)/documents/jobPostings/$(postId)).data.createdBy == request.auth.uid
        );
      }

      // Hybrid Architecture: Attendance subcollection (공고별 출석)
      match /attendance/{recordId} {
        allow read: if isSignedIn() && (
          isPrivileged() ||
          get(/databases/$(database)/documents/jobPostings/$(postId)).data.createdBy == request.auth.uid
        );
        allow write: if isSignedIn() && (
          isPrivileged() ||
          get(/databases/$(database)/documents/jobPostings/$(postId)).data.createdBy == request.auth.uid
        );
      }

      // Hybrid Architecture: Payroll subcollection (공고별 정산)
      match /payroll/{payrollId} {
        allow read: if isSignedIn() && (
          isPrivileged() ||
          get(/databases/$(database)/documents/jobPostings/$(postId)).data.createdBy == request.auth.uid
        );
        allow write: if isSignedIn() && (
          isPrivileged() ||
          get(/databases/$(database)/documents/jobPostings/$(postId)).data.createdBy == request.auth.uid
        );
      }
    }

    // --- Applications Collection (jobPostingId 통일) ---
    match /applications/{applicationId} {
      // 본인 지원서, 공고 소유자, 관리자만 읽기 가능
      allow read: if isSignedIn() && (
        isPrivileged() ||
        request.auth.uid == resource.data.applicantId ||
        (resource.data.keys().hasAny(['jobPostingId']) &&
         exists(/databases/$(database)/documents/jobPostings/$(resource.data.jobPostingId)) &&
         get(/databases/$(database)/documents/jobPostings/$(resource.data.jobPostingId)).data.createdBy == request.auth.uid)
      );

      // 사용자는 본인 지원서 생성 가능
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.applicantId &&
        request.resource.data.keys().hasAll(['applicantId', 'status']) &&
        (request.resource.data.keys().hasAny(['jobPostingId', 'postId', 'eventId'])) &&  // jobPostingId 우선, 하위 호환성 유지
        request.resource.data.status == 'applied' &&
        (!('preQuestionAnswers' in request.resource.data) || request.resource.data.preQuestionAnswers is list);

      // 관리자 및 구인공고 작성자가 지원서 수정 가능
      // status enum 검증: 허용값 출처 application.schema.ts
      allow update: if (isPrivileged() ||
        (hasValidRole() && (
          (resource.data.keys().hasAny(['jobPostingId']) && exists(/databases/$(database)/documents/jobPostings/$(resource.data.jobPostingId)) &&
           get(/databases/$(database)/documents/jobPostings/$(resource.data.jobPostingId)).data.createdBy == request.auth.uid) ||
          (resource.data.keys().hasAny(['postId']) && exists(/databases/$(database)/documents/jobPostings/$(resource.data.postId)) &&
           get(/databases/$(database)/documents/jobPostings/$(resource.data.postId)).data.createdBy == request.auth.uid) ||
          (resource.data.keys().hasAny(['eventId']) && exists(/databases/$(database)/documents/jobPostings/$(resource.data.eventId)) &&
           get(/databases/$(database)/documents/jobPostings/$(resource.data.eventId)).data.createdBy == request.auth.uid)
        ))) &&
        (!('status' in request.resource.data) ||
         request.resource.data.status in
         ['applied', 'pending', 'confirmed', 'rejected', 'cancelled', 'completed', 'cancellation_pending']);

      // 사용자는 본인 지원서 삭제 가능, 관리자 및 구인공고 작성자도 삭제 가능
      allow delete: if isSignedIn() && (
        request.auth.uid == resource.data.applicantId ||
        isPrivileged() ||
        (hasValidRole() && (
          (resource.data.keys().hasAny(['jobPostingId']) && exists(/databases/$(database)/documents/jobPostings/$(resource.data.jobPostingId)) &&
           get(/databases/$(database)/documents/jobPostings/$(resource.data.jobPostingId)).data.createdBy == request.auth.uid) ||
          (resource.data.keys().hasAny(['postId']) && exists(/databases/$(database)/documents/jobPostings/$(resource.data.postId)) &&
           get(/databases/$(database)/documents/jobPostings/$(resource.data.postId)).data.createdBy == request.auth.uid) ||
          (resource.data.keys().hasAny(['eventId']) && exists(/databases/$(database)/documents/jobPostings/$(resource.data.eventId)) &&
           get(/databases/$(database)/documents/jobPostings/$(resource.data.eventId)).data.createdBy == request.auth.uid)
        ))
      );
    }

    // --- Staff Collection (최적화 서비스 지원) ---
    match /staff/{staffId} {
      // 인증된 사용자가 스태프 정보 읽기 가능
      allow read: if isSignedIn() && (
        hasValidRole() ||
        request.auth.uid == resource.data.userId ||
        request.auth.uid == staffId
      );

      // 관리자 또는 본인만 스태프 정보 생성/수정 가능
      allow create: if isSignedIn() && (
        isAdmin() ||
        (hasValidRole() && request.auth.uid == request.resource.data.userId)
      );

      allow update: if isSignedIn() && (
        isAdmin() ||
        (hasValidRole() && request.auth.uid == resource.data.userId)
      );

      // 관리자만 삭제 가능
      allow delete: if isPrivileged();
    }

    // --- Work Logs Collection (표준 필드명 + 최적화 지원) ---
    match /workLogs/{workLogId} {
      // 본인 근무기록, 공고 소유자, 관리자만 읽기 가능
      allow read: if isSignedIn() && (
        isAdmin() ||
        request.auth.uid == resource.data.staffId ||
        (isPrivileged() &&
         exists(/databases/$(database)/documents/jobPostings/$(resource.data.jobPostingId)) &&
         get(/databases/$(database)/documents/jobPostings/$(resource.data.jobPostingId)).data.createdBy == request.auth.uid)
      );

      // 관리자 및 유효한 역할을 가진 사용자가 생성/수정 가능
      // Phase 2: jobPostingId 사용 (eventId 대신)
      allow create: if isSignedIn() && hasValidRole() &&
        request.resource.data.keys().hasAll(['staffId', 'jobPostingId', 'date']) &&
        request.resource.data.staffId is string &&
        request.resource.data.jobPostingId is string &&
        request.resource.data.date is string &&
        request.resource.data.status == 'scheduled' &&
        (!('payrollStatus' in request.resource.data) || request.resource.data.payrollStatus == 'pending');

      // 소유자/공고작성자/admin만 수정 가능 + status/payrollStatus enum 검증
      // 허용값 출처: workLog.schema.ts, statusValues.ts
      allow update: if isSignedIn() && (
        isAdmin() ||
        request.auth.uid == resource.data.staffId ||
        (hasValidRole() &&
         exists(/databases/$(database)/documents/jobPostings/$(resource.data.jobPostingId)) &&
         get(/databases/$(database)/documents/jobPostings/$(resource.data.jobPostingId)).data.createdBy == request.auth.uid)
      ) &&
        (!('status' in request.resource.data) ||
         request.resource.data.status in ['scheduled', 'checked_in', 'checked_out', 'completed', 'cancelled']) &&
        (!('payrollStatus' in request.resource.data) ||
         request.resource.data.payrollStatus in ['pending', 'processing', 'completed']);

      // 삭제 권한: Admin/Manager 또는 해당 공고 작성자 (Staff 포함)
      allow delete: if isSignedIn() && (
        isPrivileged() ||
        (hasValidRole() &&
         exists(/databases/$(database)/documents/jobPostings/$(resource.data.jobPostingId)) &&
         get(/databases/$(database)/documents/jobPostings/$(resource.data.jobPostingId)).data.createdBy == request.auth.uid)
      );
    }

    // --- Participants Collection ---
    match /participants/{participantId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isPrivileged();
    }

    // --- Tables Collection ---
    match /tables/{tableId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isPrivileged();
    }

    // --- Shift Schedules Collection ---
    match /shiftSchedules/{scheduleId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isPrivileged();
    }

    // --- Attendance Collection ---
    match /attendance/{attendanceId} {
      allow read: if isSignedIn() && (hasValidRole() || request.auth.uid == resource.data.userId);
      allow create, update: if isSignedIn() && hasValidRole();
      allow delete: if isPrivileged();
    }

    // --- Job Posting Drafts Collection (임시저장) ---
    match /jobPostingDrafts/{draftId} {
      // Helper: 공고 관리 권한 확인 (hasValidRole에 employer 포함됨)
      function canManageJobPostings() {
        return hasValidRole();
      }

      // 개별 문서 읽기: 본인의 임시저장만 가능
      allow get: if isSignedIn() && request.auth.uid == resource.data.ownerId;

      // 쿼리(list): 공고 관리 권한이 있는 사용자만 가능 (실제 결과는 where ownerId 조건으로 필터링)
      allow list: if isSignedIn() && canManageJobPostings();

      // 생성: 본인 이름으로만 생성 가능 (공고 관리 권한 필요)
      allow create: if isSignedIn() && canManageJobPostings() &&
        request.auth.uid == request.resource.data.ownerId &&
        request.resource.data.keys().hasAll(['ownerId', 'step', 'lastSavedAt']);

      // 수정: 본인의 임시저장만 수정 가능
      allow update: if isSignedIn() && request.auth.uid == resource.data.ownerId;

      // 삭제: 본인의 임시저장만 삭제 가능
      allow delete: if isSignedIn() && request.auth.uid == resource.data.ownerId;
    }

    // --- Job Posting Templates Collection ---
    match /jobPostingTemplates/{templateId} {
      // Users can read their own templates, privileged users can read all
      allow read: if isSignedIn() && (
        isPrivileged() ||
        (resource != null && isOwner(resource.data.createdBy))
      );

      // Users can create templates for themselves, privileged users can create for anyone
      allow create: if isSignedIn() &&
        request.resource.data.keys().hasAll(['name', 'templateData', 'createdBy', 'createdAt']) &&
        (isPrivileged() || isOwner(request.resource.data.createdBy)) &&
        request.resource.data.name is string &&
        request.resource.data.name.size() >= 2 &&
        request.resource.data.name.size() <= 50 &&
        (!('description' in request.resource.data) || request.resource.data.description is string) &&
        request.resource.data.templateData is map &&
        request.resource.data.createdBy is string &&
        (!('usageCount' in request.resource.data) || request.resource.data.usageCount is number) &&
        (!('isPublic' in request.resource.data) || request.resource.data.isPublic is bool);

      // Users can update their own templates, privileged users can update all
      allow update: if isSignedIn() && (
        isPrivileged() ||
        (resource != null && isOwner(resource.data.createdBy))
      );

      // Users can delete their own templates, privileged users can delete all
      allow delete: if isSignedIn() && (
        isPrivileged() ||
        (resource != null && isOwner(resource.data.createdBy))
      );
    }

    // --- Mobile Job Posting Templates Collection (모바일 앱 전용) ---
    match /mobileJobPostingTemplates/{templateId} {
      // 읽기: 본인의 템플릿만 가능, 관리자는 전체 조회 가능
      allow read: if isSignedIn() && (
        isPrivileged() ||
        (resource != null && isOwner(resource.data.createdBy))
      );

      // 생성: 본인 이름으로만 생성 가능 (공고 관리 권한 필요)
      allow create: if isSignedIn() && hasValidRole() &&
        request.resource.data.keys().hasAll(['name', 'templateData', 'createdBy', 'createdAt']) &&
        isOwner(request.resource.data.createdBy) &&
        request.resource.data.name is string &&
        request.resource.data.name.size() >= 2 &&
        request.resource.data.name.size() <= 50 &&
        (!('description' in request.resource.data) || request.resource.data.description is string) &&
        request.resource.data.templateData is map &&
        request.resource.data.createdBy is string &&
        (!('usageCount' in request.resource.data) || request.resource.data.usageCount is number) &&
        (!('lastUsedAt' in request.resource.data) || request.resource.data.lastUsedAt is timestamp);

      // 수정: 본인의 템플릿만 수정 가능 (usageCount 증가 등)
      allow update: if isSignedIn() && (
        isPrivileged() ||
        (resource != null && isOwner(resource.data.createdBy))
      );

      // 삭제: 본인의 템플릿만 삭제 가능
      allow delete: if isSignedIn() && (
        isPrivileged() ||
        (resource != null && isOwner(resource.data.createdBy))
      );
    }

    // --- Tournaments Collection ---
    match /tournaments/{tournamentId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isPrivileged();
    }

    // ================= 멀티 테넌트 아키텍처 =================
    // users/{userId}/tournaments/{tournamentId} 구조

    match /users/{userId}/tournaments/{tournamentId} {
      // 본인의 토너먼트만 읽기/쓰기 가능 (관리자는 모든 토너먼트 접근 가능)
      allow read: if isSignedIn() && (isOwner(userId) || isPrivileged());
      allow write: if isSignedIn() && (isOwner(userId) || isPrivileged());

      // --- Participants Subcollection ---
      match /participants/{participantId} {
        allow read: if isSignedIn() && (isOwner(userId) || isPrivileged());
        allow create, update, delete: if isSignedIn() && (isOwner(userId) || isPrivileged());
      }

      // --- Tables Subcollection ---
      match /tables/{tableId} {
        allow read: if isSignedIn() && (isOwner(userId) || isPrivileged());
        allow create, update, delete: if isSignedIn() && (isOwner(userId) || isPrivileged());
      }

      // --- Settings Subcollection ---
      match /settings/{settingId} {
        allow read: if isSignedIn() && (isOwner(userId) || isPrivileged());
        allow create, update: if isSignedIn() && (isOwner(userId) || isPrivileged());
        allow delete: if isPrivileged(); // 관리자만 삭제 가능
      }
    }

    // ================= collectionGroup 쿼리 지원 =================
    // collectionGroup('tables') 등의 쿼리를 위한 규칙
    match /{path=**}/tables/{tableId} {
      // users/{userId}/tournaments/{tournamentId}/tables/{tableId} 경로의 모든 테이블
      // 인증된 사용자만 읽을 수 있음 (본인 또는 관리자)
      allow read: if isSignedIn();
      // 쓰기는 상위 규칙 (users/{userId}/tournaments/{tournamentId}/tables) 적용
    }

    // collectionGroup('participants') 쿼리를 위한 규칙
    match /{path=**}/participants/{participantId} {
      // users/{userId}/tournaments/{tournamentId}/participants/{participantId} 경로의 모든 참가자
      // 인증된 사용자만 읽을 수 있음 (본인 또는 관리자)
      allow read: if isSignedIn();
      // 쓰기는 상위 규칙 (users/{userId}/tournaments/{tournamentId}/participants) 적용
    }
    
    // --- Attendance Records Collection (표준 필드명 지원) ---
    match /attendanceRecords/{recordId} {
      // 표준 필드명 기반 권한 체크
      allow read: if isSignedIn() && (
        hasValidRole() ||
        request.auth.uid == resource.data.staffId ||  // 표준 필드명
        request.auth.uid == resource.data.dealerId    // 하위 호환성
      );
      allow create, update: if isSignedIn() && hasValidRole();
      allow delete: if isPrivileged();
    }
    
    // --- Persons Collection --- [DEPRECATED - Use WorkLog.staffInfo instead]
    // Persons 컬렉션이 WorkLog.staffInfo로 통합됨 
    // 하위 호환성을 위해 읽기만 허용, 새로운 생성/수정은 제한
    match /persons/{personId} {
      // 기존 데이터 읽기만 허용 (마이그레이션 및 하위 호환성용)
      allow read: if isSignedIn();
      // 새로운 생성/수정/삭제는 제한 - WorkLog 사용 권장
      allow create, update, delete: if false;
    }
    
    // --- Applicants Collection --- [DEPRECATED - Use /persons collection instead]
    // Removed - All applicant operations should use /persons collection with type='applicant' or 'both'
    
    // --- Work Sessions Collection (다중 세션 지원) ---
    match /workSessions/{sessionId} {
      allow read: if isSignedIn() && (hasValidRole() || request.auth.uid == resource.data.personId);
      allow create, update: if isSignedIn() && hasValidRole();
      allow delete: if isPrivileged();
    }
    
    // --- Migration Backups Collection ---
    match /migration_backups/{backupId} {
      // 관리자만 접근 가능
      allow read, write: if isAdmin();
    }
    
    // --- Backup Collections (와일드카드 패턴) ---
    // staff_backup_YYYY-MM-DD 형식의 모든 백업 컬렉션
    match /{backupCollection}/{documentId} {
      allow read, write: if isAdmin() &&
        (backupCollection.matches('staff_backup_.*') ||
         backupCollection.matches('applicants_backup_.*') ||
         backupCollection.matches('persons_backup_.*'));
    }

    // --- Login Attempts Collection (보안 기능) ---
    match /loginAttempts/{attemptId} {
      // 로그인 시도 기록은 인증 없이도 가능 (로그인 전 차단 확인용)
      // 필수 필드 검증: ipAddress, timestamp, attemptCount
      allow create: if request.resource.data.keys().hasAll(['ipAddress', 'timestamp', 'attemptCount']) &&
        request.resource.data.ipAddress is string &&
        request.resource.data.timestamp is timestamp &&
        request.resource.data.attemptCount is number &&
        request.resource.data.attemptCount >= 0 &&
        request.resource.data.attemptCount <= 100;

      // 로그인 전 차단 확인을 위해 읽기 권한 허용 (인증 불필요)
      // IP 기반 차단 확인이므로 누구나 자신의 IP 상태를 확인할 수 있어야 함
      allow read: if true;

      // 관리자만 업데이트/삭제 가능 (차단 해제 등)
      allow update, delete: if isPrivileged();
    }

    // --- Account Deletion Requests Collection (계정 삭제 요청) ---
    match /deletionRequests/{requestId} {
      // 본인의 삭제 요청만 읽기 가능, 관리자는 처리 목적으로 읽기 가능
      allow read: if isSignedIn() && (
        request.auth.uid == resource.data.userId ||
        isPrivileged()
      );

      // 본인만 삭제 요청 생성 가능
      allow create: if isSignedIn() &&
        request.auth.uid == request.resource.data.userId &&
        request.resource.data.keys().hasAll(['requestId', 'userId', 'userEmail', 'userName', 'requestedAt', 'scheduledDeletionAt', 'status']) &&
        request.resource.data.status == 'pending';

      // 본인은 취소만 가능, 관리자는 모든 상태 변경 가능
      allow update: if isSignedIn() && (
        (request.auth.uid == resource.data.userId && request.resource.data.status == 'cancelled') ||
        isPrivileged()
      );

      // 삭제는 관리자만 가능
      allow delete: if isPrivileged();
    }

    // --- Inquiries Collection (고객 문의) ---
    match /inquiries/{inquiryId} {
      // 읽기: 본인의 문의는 볼 수 있고, 관리자는 모든 문의를 볼 수 있음
      allow read: if isSignedIn() && (
        isPrivileged() ||
        request.auth.uid == resource.data.userId
      );

      // 생성: 로그인한 사용자가 본인 이름으로 문의 생성 가능
      allow create: if isSignedIn() &&
        request.auth.uid == request.resource.data.userId &&
        request.resource.data.keys().hasAll(['userId', 'userEmail', 'userName', 'category', 'subject', 'message', 'status']) &&
        isSafeText(request.resource.data.subject, 200) &&
        isSafeText(request.resource.data.message, 2000) &&
        request.resource.data.category in ['general', 'account', 'technical', 'payment', 'other', 'report'] &&
        request.resource.data.status == 'open' &&
        request.resource.data.userEmail is string &&
        request.resource.data.userName is string;

      // 수정: 관리자만 문의 상태 변경 및 답변 가능
      allow update: if isPrivileged();

      // 삭제: 관리자만 가능
      allow delete: if isPrivileged();
    }

    // --- Reports Collection (신고) ---
    // v1.2.0: 양방향 신고 지원 (구인자→스태프, 구직자→구인자)
    match /reports/{reportId} {
      // 읽기: 관리자는 모든 신고, 일반 사용자는 본인 신고만
      allow read: if isSignedIn() && (
        isPrivileged() ||
        request.auth.uid == resource.data.reporterId
      );

      // 생성: 로그인한 사용자가 신고 생성 가능
      // 양방향 신고 타입 지원:
      //   - 스태프 신고 (employer→employee): tardiness, negligence, no_show, early_leave, inappropriate, dress_code, communication, other
      //   - 구인자 신고 (employee→employer): false_posting, employer_negligence, unfair_treatment, inappropriate_behavior, other
      allow create: if isSignedIn() &&
        request.auth.uid == request.resource.data.reporterId &&
        request.resource.data.keys().hasAll(['reporterId', 'reporterName', 'targetId', 'targetName', 'jobPostingId', 'type', 'description', 'reporterType', 'severity', 'status']) &&
        isSafeText(request.resource.data.description, 2000) &&
        request.resource.data.type in [
          // 스태프 신고 유형
          'tardiness', 'negligence', 'no_show', 'early_leave', 'inappropriate', 'dress_code', 'communication',
          // 구인자 신고 유형
          'false_posting', 'employer_negligence', 'unfair_treatment', 'inappropriate_behavior',
          // 공통
          'other'
        ] &&
        request.resource.data.reporterType in ['employer', 'employee'] &&
        request.resource.data.severity in ['low', 'medium', 'high', 'critical'] &&
        request.resource.data.status == 'pending' &&
        request.resource.data.reporterId is string &&
        request.resource.data.reporterName is string &&
        request.resource.data.targetId is string &&
        request.resource.data.targetName is string &&
        request.resource.data.jobPostingId is string &&
        (!('jobPostingTitle' in request.resource.data) || request.resource.data.jobPostingTitle is string) &&
        (!('workLogId' in request.resource.data) || request.resource.data.workLogId is string) &&
        (!('workDate' in request.resource.data) || request.resource.data.workDate is string) &&
        (!('evidenceUrls' in request.resource.data) || request.resource.data.evidenceUrls is list);

      // 수정: 관리자만 가능 (상태 변경 등)
      allow update: if isPrivileged();

      // 삭제: 관리자만 가능
      allow delete: if isPrivileged();
    }

    // --- Staff-based QR Attendance System Collections (v2.0) ---

    // User QR Metadata Subcollection (users/{userId}/qrMetadata/{docId})
    // 각 사용자의 QR 메타데이터 (보안 코드, 통계)
    match /users/{userId}/qrMetadata/{metadataId} {
      // 읽기: 본인과 관리자만
      allow read: if isSignedIn() && (isOwner(userId) || isPrivileged());

      // 생성/수정: 본인과 관리자만
      allow create, update: if isSignedIn() && (isOwner(userId) || isPrivileged()) &&
        request.resource.data.keys().hasAll(['securityCode', 'createdAt', 'regenerationCount', 'totalScanCount']) &&
        request.resource.data.securityCode is string &&
        request.resource.data.createdAt is timestamp &&
        request.resource.data.regenerationCount is number &&
        request.resource.data.totalScanCount is number &&
        (!('lastUsedAt' in request.resource.data) || request.resource.data.lastUsedAt is timestamp) &&
        (!('lastRegeneratedAt' in request.resource.data) || request.resource.data.lastRegeneratedAt is timestamp);

      // 삭제: 관리자만
      allow delete: if isAdmin();
    }

    // Scan History Collection (스캔 이력)
    match /scanHistory/{historyId} {
      // 읽기: 본인의 이력, 관련 이벤트 관리자, 또는 전체 관리자
      allow read: if isSignedIn() && (
        request.auth.uid == resource.data.staffId ||
        request.auth.uid == resource.data.scannedBy ||
        isPrivileged()
      );

      // 생성: 모든 인증된 사용자 (스캔 시 자동 생성)
      allow create: if isSignedIn() &&
        request.resource.data.keys().hasAll(['staffId', 'staffName', 'eventId', 'date', 'mode', 'scannedAt', 'workLogId', 'scannedBy']) &&
        request.resource.data.staffId is string &&
        request.resource.data.staffName is string &&
        request.resource.data.eventId is string &&
        request.resource.data.date is string &&
        request.resource.data.mode in ['check-in', 'check-out'] &&
        request.resource.data.scannedAt is timestamp &&
        request.resource.data.workLogId is string &&
        request.resource.data.scannedBy is string &&
        (!('deviceInfo' in request.resource.data) || request.resource.data.deviceInfo is string) &&
        (!('location' in request.resource.data) || request.resource.data.location is map);

      // 수정/삭제: 관리자만
      allow update, delete: if isAdmin();
    }

    // Scan Cooldowns Collection (5분 중복 스캔 방지)
    match /scanCooldowns/{cooldownId} {
      // 읽기: 모든 인증된 사용자 (중복 확인용)
      allow read: if isSignedIn();

      // 생성/수정: 모든 인증된 사용자 (스캔 시 자동 생성)
      allow create, update: if isSignedIn() &&
        request.resource.data.keys().hasAll(['key', 'staffId', 'eventId', 'date', 'mode', 'lastScanAt', 'expiresAt']) &&
        request.resource.data.key is string &&
        request.resource.data.staffId is string &&
        request.resource.data.eventId is string &&
        request.resource.data.date is string &&
        request.resource.data.mode in ['check-in', 'check-out'] &&
        request.resource.data.lastScanAt is timestamp &&
        request.resource.data.expiresAt is timestamp;

      // 삭제: 관리자만 (만료된 쿨다운 정리용)
      allow delete: if isAdmin();
    }

    // --- System Announcements Collection (시스템 공지사항) ---
    match /systemAnnouncements/{announcementId} {
      // 읽기: 모든 인증된 사용자
      allow read: if isSignedIn();

      // 생성: 관리자와 매니저만 가능
      allow create: if isPrivileged() &&
        request.resource.data.keys().hasAll(['title', 'content', 'priority', 'startDate', 'createdBy', 'createdByName', 'isActive', 'viewCount']) &&
        isSafeText(request.resource.data.title, 100) &&
        isSafeText(request.resource.data.content, 2000) &&
        request.resource.data.priority in ['normal', 'important', 'urgent'] &&
        request.resource.data.startDate is timestamp &&
        (!('endDate' in request.resource.data) || request.resource.data.endDate is timestamp || request.resource.data.endDate == null) &&
        request.resource.data.createdBy == request.auth.uid &&
        request.resource.data.isActive is bool &&
        request.resource.data.viewCount is number;

      // 수정: 관리자와 매니저만 가능
      allow update: if isPrivileged();

      // 삭제: 관리자만 가능
      allow delete: if isAdmin();
    }

    // --- Job Posting Announcements Collection (공고별 공지) ---
    match /jobPostingAnnouncements/{announcementId} {
      // 읽기: 모든 인증된 사용자
      allow read: if isSignedIn();

      // 생성: 관리자와 매니저만 가능
      allow create: if isPrivileged();

      // 수정/삭제: 관리자만 가능
      allow update, delete: if isAdmin();
    }

    // --- Phone Verifications (전화번호 인증) ---
    match /phoneVerifications/{verificationId} {
      // 읽기: 본인의 인증만 가능
      allow read: if isSignedIn() && request.auth.uid == resource.data.userId;

      // 생성/수정: 클라이언트 차단 (Cloud Functions만 가능)
      allow create, update: if false;

      // 삭제: 관리자만 가능
      allow delete: if isAdmin();
    }

    // --- [서버 전용] Pending Verifications ---
    // Cloud Functions(Admin SDK)에서만 접근. 클라이언트 접근 차단.
    // 포트원 V2 본인인증 임시 저장 (TTL 30분, 스케줄러 자동 정리)
    match /pendingVerifications/{verificationId} {
      allow read, write: if false;
    }

    // --- [서버 전용] CI Index ---
    // Cloud Functions(Admin SDK)에서만 접근. 클라이언트 접근 차단.
    // CI 기반 중복가입 방지 인덱스
    match /ciIndex/{ciHash} {
      allow read, write: if false;
    }

    // ================= 모바일 앱 지원 (v1.0.0) =================

    // --- FCM Tokens (푸시 알림 토큰) ---
    match /fcmTokens/{tokenId} {
      // 읽기: 본인의 토큰만 가능, 관리자는 전체 조회 가능
      allow read: if isSignedIn() && (
        request.auth.uid == resource.data.userId ||
        isPrivileged()
      );

      // 생성: 본인의 토큰만 등록 가능
      allow create: if isSignedIn() &&
        request.auth.uid == request.resource.data.userId &&
        request.resource.data.keys().hasAll(['userId', 'token', 'platform', 'createdAt']) &&
        request.resource.data.token is string &&
        request.resource.data.platform in ['ios', 'android', 'web'] &&
        request.resource.data.createdAt is timestamp &&
        (!('deviceId' in request.resource.data) || request.resource.data.deviceId is string) &&
        (!('appVersion' in request.resource.data) || request.resource.data.appVersion is string);

      // 수정: 본인의 토큰만 수정 가능
      allow update: if isSignedIn() && request.auth.uid == resource.data.userId;

      // 삭제: 본인 또는 관리자만 가능
      allow delete: if isSignedIn() && (
        request.auth.uid == resource.data.userId ||
        isPrivileged()
      );
    }

    // --- Device Sessions (디바이스 세션 관리) ---
    match /deviceSessions/{sessionId} {
      // 읽기: 본인의 세션만 가능
      allow read: if isSignedIn() && request.auth.uid == resource.data.userId;

      // 생성: 본인의 세션만 생성 가능
      allow create: if isSignedIn() &&
        request.auth.uid == request.resource.data.userId &&
        request.resource.data.keys().hasAll(['userId', 'deviceId', 'platform', 'createdAt', 'lastActiveAt']) &&
        request.resource.data.deviceId is string &&
        request.resource.data.platform in ['ios', 'android', 'web'] &&
        request.resource.data.createdAt is timestamp &&
        request.resource.data.lastActiveAt is timestamp;

      // 수정: 본인의 세션만 수정 가능 (lastActiveAt 업데이트 등)
      allow update: if isSignedIn() && request.auth.uid == resource.data.userId;

      // 삭제: 본인의 세션만 삭제 가능 (로그아웃)
      allow delete: if isSignedIn() && request.auth.uid == resource.data.userId;
    }

    // --- User Notification Settings (사용자 알림 설정) ---
    match /users/{userId}/notificationSettings/{settingId} {
      // 읽기: 본인만 가능
      allow read: if isSignedIn() && isOwner(userId);

      // 생성/수정: 본인만 가능
      allow create, update: if isSignedIn() && isOwner(userId) &&
        (!('pushEnabled' in request.resource.data) || request.resource.data.pushEnabled is bool) &&
        (!('emailEnabled' in request.resource.data) || request.resource.data.emailEnabled is bool) &&
        (!('categories' in request.resource.data) || request.resource.data.categories is map) &&
        (!('quietHours' in request.resource.data) || request.resource.data.quietHours is map);

      // 삭제: 본인만 가능
      allow delete: if isSignedIn() && isOwner(userId);
    }

    // --- App Versions (앱 버전 관리 - 강제 업데이트용) ---
    match /appVersions/{platform} {
      // 읽기: 모든 사용자 (버전 확인용)
      allow read: if true;

      // 생성/수정/삭제: 관리자만 가능
      allow create, update, delete: if isAdmin();
    }

    // --- Feature Flags (기능 플래그) ---
    match /featureFlags/{flagId} {
      // 읽기: 모든 인증된 사용자
      allow read: if isSignedIn();

      // 생성/수정/삭제: 관리자만 가능
      allow create, update, delete: if isAdmin();
    }

    // --- App Analytics (앱 분석 데이터) ---
    match /appAnalytics/{analyticsId} {
      // 읽기: 관리자만 가능
      allow read: if isPrivileged();

      // 생성: 모든 인증된 사용자 (익명 분석 데이터)
      allow create: if isSignedIn() &&
        request.resource.data.keys().hasAll(['event', 'timestamp', 'platform']) &&
        request.resource.data.event is string &&
        request.resource.data.timestamp is timestamp &&
        request.resource.data.platform in ['ios', 'android', 'web'] &&
        (!('userId' in request.resource.data) || request.resource.data.userId == request.auth.uid);

      // 수정/삭제: 불가 (분석 데이터 보존)
      allow update, delete: if false;
    }

    // --- Crash Reports (크래시 리포트) ---
    match /crashReports/{reportId} {
      // 읽기: 관리자만 가능
      allow read: if isPrivileged();

      // 생성: 모든 인증된 사용자 (크래시 발생 시 자동 생성)
      allow create: if isSignedIn() &&
        request.resource.data.keys().hasAll(['error', 'stack', 'timestamp', 'platform', 'appVersion']) &&
        request.resource.data.error is string &&
        request.resource.data.timestamp is timestamp &&
        request.resource.data.platform in ['ios', 'android', 'web'] &&
        request.resource.data.appVersion is string;

      // 수정: 관리자만 가능 (상태 변경)
      allow update: if isPrivileged();

      // 삭제: 관리자만 가능
      allow delete: if isAdmin();
    }

    // --- User Favorites (사용자 즐겨찾기 - 공고) ---
    match /users/{userId}/favorites/{favoriteId} {
      // 읽기: 본인만 가능
      allow read: if isSignedIn() && isOwner(userId);

      // 생성: 본인만 가능
      allow create: if isSignedIn() && isOwner(userId) &&
        request.resource.data.keys().hasAll(['jobPostingId', 'createdAt']) &&
        request.resource.data.jobPostingId is string &&
        request.resource.data.createdAt is timestamp;

      // 삭제: 본인만 가능
      allow delete: if isSignedIn() && isOwner(userId);

      // 수정: 불필요 (즐겨찾기는 추가/삭제만)
      allow update: if false;
    }

    // --- User Search History (검색 기록) ---
    match /users/{userId}/searchHistory/{historyId} {
      // 읽기: 본인만 가능
      allow read: if isSignedIn() && isOwner(userId);

      // 생성: 본인만 가능
      allow create: if isSignedIn() && isOwner(userId) &&
        request.resource.data.keys().hasAll(['query', 'createdAt']) &&
        isSafeText(request.resource.data.query, 100) &&
        request.resource.data.createdAt is timestamp;

      // 삭제: 본인만 가능 (검색 기록 삭제)
      allow delete: if isSignedIn() && isOwner(userId);

      // 수정: 불필요
      allow update: if false;
    }

    // --- Event QR Codes (현장 출퇴근 QR 코드) ---
    // 스태프의 QR 스캔 검증은 QR JSON 파싱으로 처리 (Firestore 직접 읽기 불필요)
    match /eventQRCodes/{qrId} {
      // 읽기: 관리자 또는 공고 소유자만 가능
      allow read: if isSignedIn() && (
        isPrivileged() ||
        (hasValidRole() &&
         exists(/databases/$(database)/documents/jobPostings/$(resource.data.jobPostingId)) &&
         get(/databases/$(database)/documents/jobPostings/$(resource.data.jobPostingId)).data.createdBy == request.auth.uid)
      );

      // 생성: 구인자/관리자 + 공고 소유자 확인
      // v2.0: eventId → jobPostingId 필드명 정규화
      allow create: if isSignedIn() && isPrivileged() &&
        request.resource.data.keys().hasAll(['jobPostingId', 'date', 'action', 'securityCode', 'createdBy', 'createdAt', 'expiresAt', 'isActive']) &&
        request.resource.data.createdBy == request.auth.uid &&
        request.resource.data.jobPostingId is string &&
        request.resource.data.date is string &&
        request.resource.data.action in ['checkIn', 'checkOut'] &&
        request.resource.data.securityCode is string &&
        request.resource.data.createdAt is timestamp &&
        request.resource.data.expiresAt is timestamp &&
        request.resource.data.isActive is bool &&
        exists(/databases/$(database)/documents/jobPostings/$(request.resource.data.jobPostingId)) &&
        get(/databases/$(database)/documents/jobPostings/$(request.resource.data.jobPostingId)).data.createdBy == request.auth.uid;

      // 수정: 공고 작성자 또는 관리자 (isActive 변경만)
      // v2.0: eventId → jobPostingId 필드명 정규화
      allow update: if isSignedIn() && (
        isAdmin() ||
        (isPrivileged() &&
         exists(/databases/$(database)/documents/jobPostings/$(resource.data.jobPostingId)) &&
         get(/databases/$(database)/documents/jobPostings/$(resource.data.jobPostingId)).data.createdBy == request.auth.uid)
      ) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['isActive']);

      // 삭제: 관리자만
      allow delete: if isAdmin();
    }

    // Fallback rule: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
