rules_version = '2';

// Firebase Storage 보안 규칙
service firebase.storage {
  match /b/{bucket}/o {
    // 프로필 이미지 - 인증된 사용자만 자신의 이미지 관리 가능
    match /profile-images/{userId}/{allPaths=**} {
      allow read: if true;  // 모든 사용자가 프로필 사진 볼 수 있음
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // 공지사항 이미지 - 인증된 사용자만 자신의 폴더에 업로드 가능
    // (관리자 권한은 Firestore rules와 앱 레벨에서 체크)
    match /announcements/{userId}/{allPaths=**} {
      allow read: if true;  // 모든 사용자가 공지사항 이미지 볼 수 있음
      // 업로드: 인증 + 본인 폴더 + 5MB 제한 + 이미지만
      allow create, update: if request.auth != null && request.auth.uid == userId
                            && request.resource.size < 5 * 1024 * 1024
                            && request.resource.contentType.matches('image/.*');
      // 삭제: 인증 + 본인 폴더만 체크 (request.resource 없음)
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // 그 외 모든 경로는 차단
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
